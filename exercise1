-- TRIGGERS
DELIMITER $$

CREATE TRIGGER check_stock_before_insert
BEFORE INSERT ON order_items
FOR EACH ROW
BEGIN
    DECLARE stock INT;
    SELECT stock_quantity INTO stock
    FROM inventory
    WHERE product_id = NEW.product_id;

    IF stock < NEW.quantity THEN
        SIGNAL SQLSTATE '45000'
            SET MESSAGE_TEXT = 'Không đủ hàng trong kho.';
    END IF;

    UPDATE inventory
    SET stock_quantity = stock_quantity - NEW.quantity
    WHERE product_id = NEW.product_id;
END$$

CREATE TRIGGER update_total_after_insert
AFTER INSERT ON order_items
FOR EACH ROW
BEGIN
    UPDATE orders
    SET total_amount = total_amount + (NEW.quantity * NEW.price)
    WHERE order_id = NEW.order_id;
END$$

-- BEFORE UPDATE
CREATE TRIGGER check_stock_before_update
BEFORE UPDATE ON order_items
FOR EACH ROW
BEGIN
    DECLARE stock INT;
    DECLARE diff INT;

    SET diff = NEW.quantity - OLD.quantity;

    IF diff > 0 THEN
        SELECT stock_quantity INTO stock
        FROM inventory
        WHERE product_id = NEW.product_id;

        IF stock < diff THEN
            SIGNAL SQLSTATE '45000'
                SET MESSAGE_TEXT = 'Không đủ hàng trong kho để cập nhật.';
        END IF;

        UPDATE inventory
        SET stock_quantity = stock_quantity - diff
        WHERE product_id = NEW.product_id;
    END IF;

    IF diff < 0 THEN
        UPDATE inventory
        SET stock_quantity = stock_quantity - diff
        WHERE product_id = NEW.product_id;
    END IF;
END$$

CREATE TRIGGER update_total_after_update
AFTER UPDATE ON order_items
FOR EACH ROW
BEGIN
    UPDATE orders
    SET total_amount = total_amount
        - (OLD.quantity * OLD.price)
        + (NEW.quantity * NEW.price)
    WHERE order_id = NEW.order_id;
END$$

CREATE TRIGGER prevent_delete_completed_order
BEFORE DELETE ON orders
FOR EACH ROW
BEGIN
    IF OLD.status = 'Completed' THEN
        SIGNAL SQLSTATE '45000'
            SET MESSAGE_TEXT = 'Không thể xóa đơn hàng đã hoàn thành.';
    END IF;
END$$

CREATE TRIGGER restore_stock_after_delete
AFTER DELETE ON order_items
FOR EACH ROW
BEGIN
    UPDATE inventory
    SET stock_quantity = stock_quantity + OLD.quantity
    WHERE product_id = OLD.product_id;
END$$

DELIMITER ;

UPDATE orders
SET total_amount = (
    SELECT IFNULL(SUM(quantity * price), 0)
    FROM order_items
    WHERE order_items.order_id = orders.order_id
);
